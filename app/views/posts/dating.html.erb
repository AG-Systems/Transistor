<select name="forma" onchange="location = this.value;">
 <option value="/">All</option>
 <option selected value="">Dating</option>
 <option value="career">Career</option>
</select>
<% @posts.each do | post | %>
<% if post.cater == 'Dating' -%>
<div class="link row clearfix">
    <h2>
      <%= link_to post.title, post %><br>
      <small class="author">Submitted <%= time_ago_in_words(post.created_at) %> ago
      </small>
    </h2>
        <div class="btn-group">
      <%= link_to like_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        Upvote
        <%= post.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-down">
        Downvote
        <%= post.get_downvotes.size %>
      <% end %>
    </div>
</div>
<% end %>
<% end %>